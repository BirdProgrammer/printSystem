<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ct.ti.SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基础设置:"
            android:textSize="18sp"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="3"
                android:gravity="center"
                android:text="份数"
                android:textSize="20sp" />

            <com.ct.ti.CounterView
                android:id="@+id/Copies"
                android:layout_width="214dp"
                android:layout_height="38dp"
                android:layout_weight="6"></com.ct.ti.CounterView>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/orientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="打印方向"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/PORTRAIT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:checked="true"
                android:button="@drawable/portrait_select"
                android:text="竖屏" />

            <RadioButton
                android:id="@+id/LANDSCAPE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="横屏"
                android:button="@drawable/landscape_select"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/Chromaticity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="打印效果"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/MONOCHROME"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@drawable/portrait_select"
                android:layout_weight="3"
                android:checked="true"
                android:text="黑白" />

            <RadioButton
                android:id="@+id/COLOR"
                android:layout_width="0dp"
                android:button="@drawable/color_select"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="彩印" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/sides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="打印方式"
                android:textSize="20sp" />

            <RadioButton
                android:button="@drawable/one_sided_select"
                android:id="@+id/ONE_SIDED"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:checked="true"
                android:text="单面" />

            <RadioButton
                android:button="@drawable/duplex_select"
                android:id="@+id/DUPLEX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="双面" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/PageRanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="3"
                android:text="打印范围"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="文档"
                android:button="@drawable/all_select"
                android:checked="true" />

            <RadioButton
                android:id="@+id/optional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:button="@drawable/optional_select"
                android:text="自定义" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始页:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/first_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束页:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/last_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="高级设置："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp" />
        <RadioGroup
            android:id="@+id/quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="页面质量"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/DRAFT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="低" />

            <RadioButton
                android:id="@+id/HIGH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="高" />

            <RadioButton
                android:id="@+id/NORMAL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:checked="true"
                android:text="普通" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="页码大小"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/MediaName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:entries="@array/page_type"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="页面边距"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/MediaPrintableArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:entries="@array/margin"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
            </Spinner>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是否加密"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/lock_true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是" />

            <RadioButton
                android:checked="true"
                android:id="@+id/lock_false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="否" />
        </RadioGroup>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="50dp">
            <Button
                android:id="@+id/button_SecondOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索设备" />
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:text="提交打印" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>
